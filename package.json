{
  "name": "ArrExtension",
  "version": "1.0.0",
  "description": "ArrExtension - Chrome Extension for *arr applications",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "version:minor": "node bump-version.js minor",
    "version:major": "node bump-version.js major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smuzoka/arr-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "arr",
    "sonarr",
    "radarr",
    "browser-extension"
  ],
  "author": "Sydney Muzoka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smuzoka/arr-extension/issues"
  },
  "homepage": "https://github.com/smuzoka/arr-extension#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.326",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@wxt-dev/module-react": "^1.1.3",
    "typescript": "^5.8.3",
    "wxt": "^0.20.7"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}